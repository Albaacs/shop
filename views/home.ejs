  <div class="container-fluid clasedecontainer" >
  
    <div class="row">
      <h1 class="title">Our Sellers</h1>
      <% results.forEach(function(seller){ %>
          <div class="col-4 cardSeller">
           
            
          
              <img src="/imageSeller/<%= seller.img_seller  %>" class="card-img-top" alt="<%= seller.img_seller  %>">
              <div class="card-body">

              <h5 class="card-title"><%= seller.name  %></h5>
              <p class="card-text"><%= seller.email  %></p>
              <p class="card-text"><%= seller.description  %></p>
              <p class="card-text"><%= seller.phone_number  %></p>
              <a href="/seller/infoSeller/<%=seller.id_seller %>" class="btn btnlog">View products</a>
              </div>
        
            </div>
            <% }) %>
    </div>

